{
    "compilerOptions": {
        "target": "ES2021",
        "lib": [
            "ES2021"
        ],
        "module": "CommonJS",
        "moduleResolution": "node16",
        "removeComments": true,

        "outDir": "dist",
        "sourceMap": true,
        "declaration": true,

        // strict checks
        "strict": true,
        "allowUnreachableCode": false,

        // lint checks
        "noUnusedLocals": true,
        "noUnusedParameters": true
    },
    "include": [
      "src/**/*.ts",
      "src/**/*.mts",
      "src/**/*.cts",
    ]
}
